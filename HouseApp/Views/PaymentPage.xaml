<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HouseApp.Views.PaymentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:HouseApp.ViewModels"
    x:DataType="viewModels:PaymentViewModel"
    Title="Payment"
    BackgroundColor="{StaticResource AppBg}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <Label
                Text="Payment Details"
                FontSize="26"
                FontAttributes="Bold"
                TextColor="{StaticResource TextPrimary}" />

            <!-- Payment Info -->
            <Frame CornerRadius="18" Padding="18" BackgroundColor="{StaticResource CardBg}" HasShadow="True">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Amount Due" FontSize="12" TextColor="{StaticResource TextMuted}" />
                        <Label Text="{Binding Payment.Amount, StringFormat='€{0:N2}'}" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Accent}" />
                    </VerticalStackLayout>

                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Payment Type" FontSize="12" TextColor="{StaticResource TextMuted}" />
                            <Label Text="{Binding Payment.PaymentType}" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Due Date" FontSize="12" TextColor="{StaticResource TextMuted}" />
                            <Label Text="{Binding Payment.DueDate, StringFormat='{0:MMM dd, yyyy}'}" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView Grid.Row="2" HeightRequest="1" BackgroundColor="{StaticResource Border}" />

                    <Label Grid.Row="3" Text="⚠️ Test Mode - No real charges will be made" FontSize="12" TextColor="#F59E0B" HorizontalOptions="Center" />
                </Grid>
            </Frame>

            <!-- Card Details -->
            <Label
                Text="Card Details"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="{StaticResource TextPrimary}" />

            <VerticalStackLayout Spacing="15">
                <!-- Card Number -->
                <Label Text="Card Number" 
                       FontSize="14" 
                       TextColor="#6B7280" 
                       Margin="0,8,0,4"/>
                <Border StrokeThickness="1" 
                        Stroke="#E5E7EB" 
                        BackgroundColor="White"
                        Padding="12"
                        Margin="0,8"
                        StrokeShape="RoundRectangle 8">
                    <Entry Placeholder="4242 4242 4242 4242"
                           Text="{Binding CardNumber}"
                           TextColor="#111827"
                           PlaceholderColor="#9CA3AF"
                           BackgroundColor="Transparent"
                           FontSize="16"
                           Keyboard="{x:Static Keyboard.Numeric}"
                           MaxLength="19"/>
                </Border>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Expiry Date" 
                               FontSize="14" 
                               TextColor="#6B7280" 
                               Margin="0,8,0,4"/>
                        <Border StrokeThickness="1" 
                                Stroke="#E5E7EB" 
                                BackgroundColor="White"
                                Padding="12"
                                Margin="0,8"
                                StrokeShape="RoundRectangle 8">
                            <Entry Placeholder="MM/YY"
                                   Text="{Binding ExpiryDate}"
                                   TextColor="#111827"
                                   PlaceholderColor="#9CA3AF"
                                   BackgroundColor="Transparent"
                                   FontSize="16"
                                   MaxLength="5"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="CVV" 
                               FontSize="14" 
                               TextColor="#6B7280" 
                               Margin="0,8,0,4"/>
                        <Border StrokeThickness="1" 
                                Stroke="#E5E7EB" 
                                BackgroundColor="White"
                                Padding="12"
                                Margin="0,8"
                                StrokeShape="RoundRectangle 8">
                            <Entry Placeholder="123"
                                   Text="{Binding Cvv}"
                                   TextColor="#111827"
                                   PlaceholderColor="#9CA3AF"
                                   BackgroundColor="Transparent"
                                   FontSize="16"
                                   Keyboard="{x:Static Keyboard.Numeric}"
                                   MaxLength="3"
                                   IsPassword="True"/>
                        </Border>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>

            <Button
                Text="Pay Now"
                Command="{Binding ProcessPaymentCommand}"
                IsEnabled="{Binding IsProcessing, Converter={StaticResource InvertedBoolConverter}}"
                BackgroundColor="{StaticResource Accent}"
                TextColor="White"
                CornerRadius="16"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold" />

            <ActivityIndicator IsRunning="{Binding IsProcessing}" Color="{StaticResource Accent}" />

            <Label
                Text="This is a test payment system. Use test card: 4242 4242 4242 4242"
                FontSize="11"
                TextColor="{StaticResource TextMuted}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
